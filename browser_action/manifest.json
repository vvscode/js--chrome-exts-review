{
  "manifest_version": 2,
  "name": "browser_action",
  "version": "0.1.0",
  "description": "An example browser action ext",
  "browser_action": {
    "default_title": "Use this to open the popup",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs"
  ]
}
